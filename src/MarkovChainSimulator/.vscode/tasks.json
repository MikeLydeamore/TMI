{
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "compile",
            "isBuildCommand": true,
            "command": "clang++",
            "suppressTaskName": false,
            "args": ["-std=c++11", "-v", "-I./MarkovChain/", "-L./staticlibs/", "-lboost_program_options", "-o", "MarkovChainSimulator", "MarkovSimulator.cpp"]
        },
        {
            "taskName": "debug",
            "isBuildCommand": true,
            "command": "clang++",
            "suppressTaskName": false,
            "args": ["-std=c++11", "-lboost_program_options", "-g", "-o", "MarkovChainSimulator", "MarkovSimulator.cpp"]
        },
        {
            "taskName": "run",
            "command": "./MarkovChainSimulator",
            "suppressTaskName": true
        }
    ]
}